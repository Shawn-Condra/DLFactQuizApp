<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.deshawnloggins.dlfactquizapp.MainActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/darker_than_black" />

        <TextView
            style="@style/IntoductionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/TopHeader" />

        <TextView
            style="@style/IntoductionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:text="@string/BottomHeader" />

        <EditText
            android:id="@+id/players_name"
            style="@style/IntoductionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Players Name Here"
            android:inputType="textCapWords" />

        <TextView
            style="@style/QuestionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:text="What Is The Best Thing In The World?" />

        <EditText
            android:id="@+id/Favorite_Thing_IN_World"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="My favorite Thing To DO!"
            android:inputType="textCapSentences" />

        <TextView
            style="@style/QuestionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:text="What's My Favorite Hobby? " />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/music_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="hobbysButtonClicked"
                android:text="Listening To Music" />

            <RadioButton
                android:id="@+id/running_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="hobbysButtonClicked"
                android:text="Running" />

            <RadioButton
                android:id="@+id/progamming_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="hobbysButtonClicked"
                android:text="Programming" />
        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <TextView
            style="@style/QuestionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:text="What Is My Favorite Food?" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/laptop_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="favoriteFoodButtonClicked"
                android:text="Laptops " />

            <RadioButton
                android:id="@+id/book_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="favoriteFoodButtonClicked"
                android:text="Books " />

            <RadioButton
                android:id="@+id/Toast_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="favoriteFoodButtonClicked"
                android:text="Toast " />

        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <TextView
            style="@style/QuestionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:text="Which Anime Is My Favorite ?" />

        <CheckBox
            android:id="@+id/Hero_Academia_checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Boku no Hero Academia" />

        <CheckBox
            android:id="@+id/SAO_CheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sword Art Online" />

        <CheckBox
            android:id="@+id/Stride_CheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stride" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <TextView
            style="@style/QuestionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:text="What Is My Favorite Game?" />

        <CheckBox
            android:id="@+id/Overwatch_checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OverWatch" />

        <CheckBox
            android:id="@+id/Life_Strange_Checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Life is Strange" />

        <CheckBox
            android:id="@+id/Left_4_Dead_checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Left for Dead" />

        <CheckBox
            android:id="@+id/Ultimate_Despair_checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Danganronpa Ultimate Despair" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/submit_quiz_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:onClick="submitQuiz"
                android:text="SubmitQuiz" />

            <Button
                android:id="@+id/reset_Button_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:onClick="resetButton"
                android:text="Reset" />

            <Button
                android:id="@+id/Extras_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="29dp"
                android:onClick="extrasButton"
                android:text="Extras" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>

